# MindWell AI Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API Configuration
# =============================================================================
APP_NAME=MindWell AI
APP_ENV=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# OpenAI Configuration
# =============================================================================
# Option 1: OpenAI API
OPENAI_API_KEY=sk-your-api-key-here

# Option 2: Azure OpenAI (uncomment to use)
# AZURE_OPENAI_API_KEY=your-azure-key
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
# AZURE_OPENAI_API_VERSION=2024-02-01

# Model Configuration
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql+asyncpg://mindwell:mindwell@localhost:5432/mindwell_db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# =============================================================================
# Security Configuration
# =============================================================================
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
# For HIPAA compliance, ensure PII is not logged
LOG_MASK_PII=true

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_RISK_ASSESSMENT=true
ENABLE_SESSION_RECORDING=true

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# =============================================================================
# Crisis Resources (customize for your region)
# =============================================================================
CRISIS_HOTLINE_NUMBER=988
CRISIS_TEXT_LINE=Text HOME to 741741
EMERGENCY_NUMBER=911
